<aura:component >
	<!-- this component recieves a map of col num/list of strings and optionally a header column string row -->

<aura:attribute name="inputList" type="List"/>
	<aura:attribute name="thString" type="String" />
	<aura:attribute name="fieldList" type="List" />
	<aura:attribute name="colSize" type="Integer" />

 <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

	<div>
		<table>
			<th colspan = "{!v.colSize}">{!v.thString} </th>
			<aura:iteration items="{!v.fieldList}" var="field">
				<tr>
					<aura:iteration items="{!field}" var="value">
						<td>
							{!value}
						</td>
					</aura:iteration>
				</tr>
			</aura:iteration>
		</table> 

	</div>

</aura:component>