<aura:component controller="TTCustomRequestTypeController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="selectedOption" type="String"/>
	<aura:attribute name="options" type="String[]"/>
    <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>
	
    <h3 style="font-size: 14px;" class="slds-section-title--divider slds-section__title  test-id__section-header-container">Edit Request Type</h3>
	<div class="slds-form--stacked slds-p-around--medium slds-m-bottom--x-small">
    <div class="slds-grid slds-gutters">
      <div class="slds-col slds-size_2-of-4">
        <lightning:select class="select"  value="{!v.selectedOption}" onchange="{!c.onChangeOption}" label="Request Type:">
            <option value="">-- None --</option>
            <aura:iteration items="{!v.options}" var="option">
                <option value="{!option.val}" text="{!option.val}" selected="{!option.selected}"></option>
            </aura:iteration>
        </lightning:select>
      </div>
 	</div>
    </div>
    
</aura:component>