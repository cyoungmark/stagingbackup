<apex:page StandardController="Case"  extensions="sendEmailToCaseContact" standardStylesheets="true">
   <head>
    <style>
        #mainBlock  td.pbTitle {
            width:100% !important;
        }
    </style>
    </head>
    <div id="mainBlock">
    <apex:pageBlock title="Send Comment to User"  >
    <apex:pageBlockSection showHeader="false" columns="1">
    <apex:form rendered="{!Case.ContactId!=null}" id="form">
        <apex:pagemessages ></apex:pagemessages>
        <apex:outputPanel id="pnlMessages" >
                
            </apex:outputPanel>
        <apex:inputField value="{!Case.Last_Comment__c}" required="true" style="width:100%"/>
        <br/>
        <apex:commandButton value="Send Email" action="{!sendEmail}" reRender="form"/>
    </apex:form>
    <apex:form rendered="{!Case.ContactId==null}">
    <apex:outputText > Please, add contact to case to be able to send emails...</apex:outputText>
    </apex:form>
    </apex:pageBlockSection>
    </apex:pageBlock>
    </div>
</apex:page>